{
    "global_default": {
        "seed": 1,
        "validation_season": 2022,
        "recent_games": 5,
        "training_seasons": [
            2015,
            2016,
            2017,
            2018,
            2019,
            2020,
            2021,
            2023
        ],
        "missing_data_threshold": 0.1,
        "train_params": {
            "max_time_mins": 20
        }
    },
    "model_groups": [
        {
            "data_filename": "mlb_team.pq",
            "p_or_t": "T",
            "models": {
                "MLB-team-runs": {
                    "target": [
                        "stat",
                        "off_runs"
                    ],
                    "train_params": {
                        "max_time_mins": 40, 
                        "max_eval_time_mins": 15
                    }
                },
                "MLB-team-win": {
                    "target": [
                        "stat",
                        "win"
                    ]
                }
            }
        },
        {
            "data_filename": "mlb_pitcher.pq",
            "p_or_t": "P",
            "include_pos": false,
            "missing_data_threshold": 0.28,
            "target_pos": [
                "P"
            ],
            "models": {
                "MLB-P-DK": {
                    "target": [
                        "calc",
                        "dk_score"
                    ]
                },
                "MLB-P-Y": {
                    "target": [
                        "calc",
                        "y_score"
                    ]
                },
                "MLB-P-K": {
                    "target": [
                        "stat",
                        "p_k"
                    ]
                },
                "MLB-P-IP": {
                    "target": [
                        "stat",
                        "p_ip"
                    ]
                },
                "MLB-P-HITS": {
                    "target": [
                        "stat",
                        "p_hits"
                    ]
                }
            }
        },
        {
            "data_filename": "mlb_hitter.pq",
            "p_or_t": "P",
            "include_pos": true,
            "target_pos": [
                "1B",
                "2B",
                "3B",
                "SS",
                "C",
                "LF",
                "RF",
                "CF"
            ],
            "models": {
                "MLB-H-DK": {
                    "target": [
                        "calc",
                        "dk_score"
                    ],
                    "include_pos": false,
                    "cols_to_drop": ["extra:*", "*recent-[1-9]*", "*(player|opp)-team", "*std-mean"],
                    "filtering_query": "`calc:dk_score`.notna()"
                },
                "MLB-H-Y": {
                    "target": [
                        "calc",
                        "y_score"
                    ],
                    "filtering_query": "`calc:y_score`.notna()"
                },
                "MLB-H-hit": {
                    "target": [
                        "stat",
                        "off_hit"
                    ],
                    "filtering_query": "`stat:off_hit`.notna()"
                },
                "MLB-H-runs": {
                    "target": [
                        "stat",
                        "off_runs"
                    ],
                    "filtering_query": "`stat:off_runs`.notna()"
                }
            }
        }
    ]
}