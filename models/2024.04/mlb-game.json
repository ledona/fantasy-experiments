// configuration for game player/team prediction models
{
    "data_filename": "mlb_team.pq",
    "seed": 1,
    "validation_season": 2023,
    "recent_games": 5,
    "training_seasons": [
        2015,
        2016,
        2017,
        2018,
        2019,
        2020,
        2021,
        2022
    ],
    "starters_only": true,
    "train_params": {
        "max_time_mins": 20
    },
    // All features are duplicated for home and away teams
    // and will be std and recent mean.
    "features": {
        "team": [
            "stat:p_runs",
            "extra:ops_recent",
            "extra:ops_std",
            "stat:off_runs",
            "extra:whip_recent",
            "extra:whip_std"
        ]
    },
    // models define a collection of stats that will be predicted per sample
    // and any additional config for that model
    "models": {
        "DK": {
            "features": {
                "player": [
                    "P:calc:dk_score",
                    "C|1B|2B|3B|SS|OF|LF|CF|RF:calc:dk_score"
                ]
            },
            // for each player/team that produces features, predict the following
            "targets": {
                "player": [
                    "calc:dk_score"
                ]
            }
        },
        "Y": {
            "features": {
                "player": [
                    "P:calc:y_score",
                    "C|1B|2B|3B|SS|OF|LF|CF|RF:calc:y_score"
                ]
            },
            "targets": {
                "player": [
                    "calc:y_score"
                ]
            }
        },
        "stats": {
            "features": {
                "player": [
                    "P:extra:whip_std",
                    "P:extra:whip_recent",
                    "P:stat:p_ip",
                    "P:stat:p_k",
                    "C|1B|2B|3B|SS|OF|LF|CF|RF:stat:off_hit",
                    "C|1B|2B|3B|SS|OF|LF|CF|RF:extra:bases_recent",
                    "C|1B|2B|3B|SS|OF|LF|CF|RF:extra:bases_std"
                ],
                "team": [
                    "stat:p_win"
                ]
            },
            "targets": {
                "player": [
                    "stat:off_hit",
                    "extra:bases",
                    "stat:p_ip",
                    "stat:p_k"
                ],
                "team": [
                    "stat:off_runs",
                    "stat:p_win"
                ]
            }
        }
    }
}