// individual player/team model
{
    "sport": "mlb",
    "global_default": {
        "seed": 1,
        "validation_season": 2023,
        "recent_games": 5,
        "training_seasons": [
            2021,
            2022
        ],
        "missing_data_threshold": 0.1,
        "train_params": {
            "epochs_max": 100,
            "early_stop": 5,
            "max_eval_time_mins": 15,
            "max_time_mins": 60
        }
    },
    "model_groups": [
        {
            "data_filename": "mlb_team.parquet",
            "p_or_t": "T",
            "models": {
                "MLB-team-runs": {
                    "target": "stat:off_runs",
                    "cols_to_drop": [
                        "extra:(whip|venue|opp|hit|is_home).*",
                        "stat:.*:.*",
                        ".*opp-team",
                        ".*:p.*"
                    ]
                }
            }
        },
        {
            "data_filename": "mlb_pitcher.parquet",
            "p_or_t": "P",
            "include_pos": false,
            "missing_data_threshold": 0.28,
            "target_pos": [
                "P"
            ],
            "models": {
                "MLB-P-DK": {
                    "target": "calc:dk_score",
                    "cols_to_drop": [
                        ".*y_score.*",
                        ".*recent-.*",
                        "extra:venue.*",
                        ".*dk_score:.*"
                    ]
                }
            }
        },
        {
            "data_filename": "mlb_hitter.parquet",
            "p_or_t": "P",
            "include_pos": true,
            "target_pos": [
                "1B",
                "2B",
                "3B",
                "SS",
                "C",
                "LF",
                "RF",
                "CF",
                "OF"
            ],
            "train_params": {
                "n_jobs": 2,
                "max_time_mins": 45,
                "max_eval_time_mins": 15
            },
            "models": {
                "MLB-H-DK": {
                    "target": "calc:dk_score",
                    "train_params": {
                        "batch_size": 64,
                        "hidden_layers": 1
                    },
                    "cols_to_drop": [
                        "extra:bases",
                        ".*y_score.*"
                    ]
                },
                "MLB-H-hit": {
                    "target": "stat:off_hit",
                    "cols_to_drop": [
                        "extra:bases"
                    ]
                }
            }
        }
    ]
}