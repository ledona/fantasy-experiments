{
    "sport": "mlb",
    "global_default": {
        "seed": 1,
        "validation_season": 2025,
        "recent_games": 5,
        "training_seasons": [
            2015,
            2016,
            2017,
            2018,
            2019,
            2020,
            2021,
            2022,
            2023,
            2024
        ],
        "missing_data_threshold": 0.1,
        "train_params": {
            "epochs_max": 500,
            "early_stop": 3,
            "nn.early_stop": 20,
            "n_jobs": 6,
            "tp:population_size": 20,
            "tp:max_eval_time_mins": 20,
            "max_time_mins": 360,
            "nn:batch_size": 32
        }
    },
    "model_groups": [
        {
            "data_filename": "mlb_team.parquet",
            "p_or_t": "T",
            "train_params": {
                "tp:population_size": 50
            },
            "models": {
                "MLB-team-runs": {
                    "target": "stat:off_runs",
                    "train_params": {
                        "nn:learning_rate": 0.0001,
                        "nn:hidden_layers": 5
                    }
                },
                "MLB-team-win": {
                    "target": "stat:win",
                    "train_params": {
                        "nn:learning_rate": 0.05,
                        "nn:hidden_layers": 10
                    }
                }
            }
        },
        {
            "data_filename": "mlb_pitcher.parquet",
            "p_or_t": "P",
            "include_pos": false,
            "missing_data_threshold": 0.28,
            "train_params": {
                "tp:population_size": 40,
                "nn:learning_rate": 0.00001,
                "nn:hidden_layers": 4
            },
            "target_pos": [
                "P"
            ],
            "models": {
                "MLB-P-DK": {
                    "target": "calc:dk_score",
                    "cols_to_drop": [
                        ".*(y|fd)_score.*"
                    ]
                },
                "MLB-P-K": {
                    "target": "stat:p_k",
                    "cols_to_drop": [
                        "calc:(dk|fd|y)_score.+"
                    ]
                },
                "MLB-P-OUTS": {
                    "target": "stat:p_outs",
                    "cols_to_drop": [
                        "calc:(dk|fd|y)_score.+"
                    ]
                },
                "MLB-P-HITS": {
                    "target": "stat:p_hits",
                    "cols_to_drop": [
                        "calc:(dk|fd|y)_score.+"
                    ]
                }
            }
        },
        {
            "data_filename": "mlb_hitter.parquet",
            "p_or_t": "P",
            "include_pos": true,
            "train_params": {
                "nn:learning_rate": 0.0001,
                "nn:hidden_layers": 8,
                "tp:population_size": 25
            },
            "target_pos": [
                "1B",
                "2B",
                "3B",
                "SS",
                "C",
                "LF",
                "RF",
                "CF",
                "OF"
            ],
            "models": {
                "MLB-H-DK": {
                    "target": "calc:dk_score",
                    "cols_to_drop": [
                        ".*(y|fd)_score.*"
                    ]
                },
                "MLB-H-hit": {
                    "target": "stat:off_hit",
                    "cols_to_drop": [
                        "calc:(dk|fd|y)_score.+"
                    ]
                },
                "MLB-H-runs": {
                    "target": "stat:off_runs",
                    "cols_to_drop": [
                        "calc:(dk|fd|y)_score.+"
                    ]
                }
            }
        }
    ]
}