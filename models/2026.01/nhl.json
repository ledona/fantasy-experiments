{
    "sport": "nhl",
    "global_default": {
        "seed": 1,
        "validation_season": 20242025,
        "recent_games": 5,
        "training_seasons": [
            20072008,
            20082009,
            20092010,
            20102011,
            20112012,
            20122013,
            20132014,
            20142015,
            20152016,
            20162017,
            20172018,
            20182019,
            20192020,
            20202021,
            20222023,
            20232024
        ],
        "missing_data_threshold": 0.085,
        "train_params": {
            "nn.early_stop": 20,
            "epochs_max": 500,
            "early_stop": 3,
            "tp:population_size": 50,
            "max_time_mins": 360
        }
    },
    "model_groups": [
        {
            "data_filename": "nhl_team.parquet",
            "p_or_t": "T",
            "train_params": {
                "nn:hidden_layers": 6,
                "nn:learning_rate": 0.001,
                "n_jobs": 8
            },
            "models": {
                "NHL-team-goal": {
                    "target": [
                        "stat",
                        "goal"
                    ]
                },
                "NHL-team-win": {
                    "target": [
                        "stat",
                        "win"
                    ]
                }
            }
        },
        {
            "data_filename": "nhl_skater.parquet",
            "include_pos": true,
            "p_or_t": "P",
            "train_params": {
                "n_jobs": 5,
                "tp:max_eval_time_mins": 10,
                "tp:population_size": 25,
                "nn:hidden_layers": 4,
                "nn:learning_rate": 0.00001
            },
            "target_pos": [
                "LW",
                "RW",
                "W",
                "C",
                "D"
            ],
            "training_pos": [
                "LW",
                "RW",
                "W",
                "C",
                "D"
            ],
            "models": {
                "NHL-skater-DK": {
                    "target": [
                        "calc",
                        "dk_score"
                    ],
                    "cols_to_drop": [
                        "calc:(y|fd)_score.+"
                    ]
                },
                "NHL-skater-Y": {
                    "target": [
                        "calc",
                        "y_score"
                    ],
                    "cols_to_drop": [
                        "calc:(dk|fd)_score.+"
                    ]
                },
                "NHL-skater-shot": {
                    "target": [
                        "stat",
                        "shot"
                    ],
                    "cols_to_drop": [
                        "calc:(dk|fd|y)_score.+"
                    ]
                },
                "NHL-skater-assist": {
                    "target": [
                        "stat",
                        "assist"
                    ],
                    "cols_to_drop": [
                        "calc:(dk|fd|y)_score.+"
                    ]
                },
                "NHL-skater-goal": {
                    "target": [
                        "stat",
                        "goal"
                    ],
                    "cols_to_drop": [
                        "calc:(dk|fd|y)_score.+"
                    ]
                }
            }
        },
        {
            "data_filename": "nhl_goalie.parquet",
            "p_or_t": "P",
            "include_pos": false,
            "target_pos": [
                "G"
            ],
            "train_params": {
                "tp:max_eval_time_mins": 10,
                "n_jobs": 4,
                "nn:hidden_layers": 8,
                "nn:learning_rate": 0.0001
            },
            "models": {
                "NHL-goalie-DK": {
                    "target": [
                        "calc",
                        "dk_score"
                    ],
                    "cols_to_drop": [
                        "calc:(y|fd)_score.+"
                    ]
                },
                "NHL-goalie-Y": {
                    "target": [
                        "calc",
                        "y_score"
                    ],
                    "cols_to_drop": [
                        "calc:(dk|fd)_score.+"
                    ]
                },
                "NHL-goalie-save": {
                    "target": [
                        "stat",
                        "save"
                    ],
                    "cols_to_drop": [
                        "calc:(dk|fd|y)_score.+"
                    ]
                },
                "NHL-goalie-ag": {
                    "target": [
                        "stat",
                        "goal_ag"
                    ],
                    "cols_to_drop": [
                        "calc:(dk|fd|y)_score.+"
