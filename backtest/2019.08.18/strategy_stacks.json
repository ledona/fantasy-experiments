{
    "mlb.mult-opp+stacks": {
        "description": "Testing mlb stacks and opponent avoidance",
        "type": "simple_dfs",
        "contest": "GPP",
        "sport_filter": ["mlb"],
        "cls_init_args": {
            "contest_style": "CLASSIC",
            "wager_abs": 0.25,
            "pct_lineup_diff": 0.8,
            "n_lineups": 4,
            "addl_viability_tests": [
                ["stack_same_team_and_pos",
                 {"positions": ["1B", "2B", "3B", "C", "SS", "LF", "CF", "RF", "C"],
                  "stack_size": 1,
                  "number_of_stacks": 2}],
                ["no_opp_team", {"position": "P"}]
            ]
        }
    },
    "nfl.mult-stacks": {
        "description": "Testing nfl stacks and opponent avoidance",
        "type": "simple_dfs",
        "contest": "GPP",
        "sport_filter": ["nfl"],
        "cls_init_args": {
            "contest_style": "CLASSIC",
            "wager_abs": 0.25,
            "pct_lineup_diff": 0.8,
            "n_lineups": 4,
            "addl_viability_tests": [
                ["stack_same_team_diff_pos",
                 {"position": "QB",
                  "stack_positions": ["WR", "TE"],
                  "stack_size": 1}],
                ["no_opp_team", {"position": "__TEAM__"}]
            ]
        }
    },
    "nhl.mult-stacks": {
        "description": "Testing nhl stacks of opponent avoidance",
        "type": "simple_dfs",
        "contest": "GPP",
        "sport_filter": ["nhl"],
        "cls_init_args": {
            "contest_style": "CLASSIC",
            "wager_abs": 0.25,
            "pct_lineup_diff": 0.8,
            "n_lineups": 4,
            "addl_viability_tests": [
                ["no_opp_team", {"position": "G"}]
            ]
        }
    }
}
