    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "env": {
                "SQLALCHEMY_WARN_20": "1",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "justMyCode": true
        },
        {
            "name": "train_test CLI",
            "type": "python",
            "request": "launch",
            "module": "lib.cli",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/models",
            "args": [
                // "--info",
                "--tpot_jobs", "2",
                // "--time", "2",
                "--automl", "dummy",
                "--dest", "/tmp",
                "2023.12/nhl.json",
                // "--info",
                "NHL-goalie-DK"
            ]
        },
        {
            "name": "df hist retrieval",
            "type": "python",
            "request": "launch",
            "module": "lib.retrieve_hist",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/df-hist",
            "args": [
                // "yahoo",
                "draftkings", 
                // "fanduel". 
                // "--address", "127.0.0.1:9222",
                // "--web-limit", "10",
                "--cache", "/fantasy-archive/betting/df-hist-cache",
                "--cache-only", 

                "--sports", "nfl",
                "--start-date", "20201001", "--end-date", "2021-01-01",
            ]
        },
    ]
}