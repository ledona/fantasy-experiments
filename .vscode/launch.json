{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "env": {
                "SQLALCHEMY_WARN_20": "1",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "justMyCode": true
        },
        {
            "name": "model train-test regresssor",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.regressor",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/models",
            "args": [
                // "--info",
                // "--tpot_jobs", "2",
                // "--time", "2",
                // "--automl", "dummy",
                "--mode", "reuse",
                "--dest", "2023.12",
                "2023.12/lol.json",
                // "--info",
                "LOL-player-DK"
            ]
        },
        {
            "name": "deep lineup - data",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.deep_lineup",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/models",
            "args": [
                "data",
                "--samples", "20",
                // "--file_mode", "fail",
                "--cache_dir", "./cache_dir",
                "--name", "test",
                "${env:FANTASY_HOME}/nhl_hist_20072008-20222023.scored.db",
                "draftkings"
            ]
        },
        {
            "name": "deep lineup - train",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.deep_lineup",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/models",
            "args": [
                "train",
                "/fantasy-isync/fantasy-modeling/deep_lineup/test"
            ]
        },
        {
            "name": "df-hist retrieval",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.retrieve.retrieve_hist",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/df-hist",
            "args": [
                // "yahoo",
                "draftkings", 
                // "fanduel". 
                "--address", "127.0.0.1:9222",
                // "--web-limit", "10",
                "--history-file-dir", "${userHome}\\IDrive-sync\\fantasy\\fantasy-dfs-hist\\betting",
                "--cache", "${userHome}\\IDrive-sync\\fantasy\\fantasy-dfs-hist\\betting\\df-hist-cache",

                "--cache-only", 
                "-o", "${userHome}\\IDrive-sync\\fantasy\\fantasy-dfs-hist\\betting",
                // "--sports", "nfl", 
                // "--start-date", "20240120", "--end-date", "2024-01-28",
            ]
        },
        {
            "name": "df-hist xform",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.xform.cli",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/df-hist",
            "args": [
                "--services", "draftkings",
                // "--", "--dates", "20200901", "20201101",
                // "--sports", "nfl",
            ]
        },
        {
            "name": "df-hist modeling",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.modeling.cli",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/df-hist",
            "args": [
                "--auto", "dummy",
                "--mode", "reuse", 
                "lol", "nfl", "mlb", "nhl", "nba"
            ]
        },
    ]
}