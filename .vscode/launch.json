    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "env": {
                "SQLALCHEMY_WARN_20": "1",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "justMyCode": true
        },
        {
            "name": "pt-model train-test regresssor",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.regressor",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/models",
            "args": [
                "train",
                // "--info",
                // "--tpot_jobs", "2",
                // "--time", "2",
                "--data_dir", "/fantasy-isync/fantasy-modeling/2023.12",
                "--limit", "100000",
                "--arch", "nn",
                "--dest", "/fantasy-isync/fantasy-modeling/2024.04",
                "2024.04/mlb.json",
                "MLB-H-DK"
            ]
        },
        {
            "name": "deep lineup - data",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.deep_lineup",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/models",
            "args": [
                "--dest_dir", "/fantasy-isync/fantasy-modeling/2024.04/deep-lineup",
                "data",
                "--samples", "500",
                "--cache_dir", "/fantasy-isync/fantasy-modeling/2024.04/deep-lineup/cache",

                // "--name", "nba-dk-dataset",
                // "${env:FANTASY_HOME}/nba_hist_20082009-20222023.scored.db",
                // "--seasons", "20152016", "20222023",
                // "--validation", "20222023", ".2",

                "--name", "mlb-dk-dataset",
                "${env:FANTASY_HOME}/mlb_hist_20082023.scored.db",
                "--seasons", "2016", "2023",
                "--validation", "2023", ".2",

                // "--name", "nhl-dk-dataset",
                // "${env:FANTASY_HOME}/nhl_hist_20072008-20222023.scored.db",
                // "--seasons", "20152016", "20222023",
                // "--validation", "20222023", ".2",

                // "--name", "nfl-dk-dataset",
                // "${env:FANTASY_HOME}/nfl_hist_2009-2022.scored.db",
                // "--seasons", "2017", "2022",
                // "--validation", "2022", ".2",

                "draftkings",
                // "--skip_training",
            ]
        },
        {
            "name": "deep lineup - train",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.deep_lineup",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/models",
            "args": [
                "--verbose",
                "train",
                "/fantasy-isync/fantasy-modeling/2024.04/deep-lineup/nhl-dk-dataset",
                "--model_filepath", "/fantasy-isync/fantasy-modeling/2024.04/deep-lineup/nhl-dk-lineup-small",
                "--epochs", "50",
                "--batch", "32",
                "--hidden_size", "1024",
                "--checkpoint_frequency", "10",
                "--early", "10",
                // "--limit", "32",
                // "--overwrite",
                // "--checkpoint_file", "/fantasy-isync/fantasy-modeling/2024.04/deep-lineup/nba-dk-lineup-checkpoints/cp-epoch-34-early-stop.pt",
            ]
        },
        {
            "name": "df-hist retrieval",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.retrieve.retrieve_hist",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/df-hist",
            "args": [
                // "yahoo",
                "draftkings", 
                // "fanduel". 
                "--address", "127.0.0.1:9222",
                // "--web-limit", "10",
                "--history-file-dir", "${userHome}\\IDrive-sync\\fantasy\\fantasy-dfs-hist\\betting",
                "--cache", "${userHome}\\IDrive-sync\\fantasy\\fantasy-dfs-hist\\betting\\df-hist-cache",

                "--cache-only", 
                "-o", "${userHome}\\IDrive-sync\\fantasy\\fantasy-dfs-hist\\betting",
                // "--sports", "nfl", 
                // "--start-date", "20240120", "--end-date", "2024-01-28",
            ]
        },
        {
            "name": "df-hist xform",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.xform.cli",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/df-hist",
            "args": [
                "--services", "draftkings",
                // "--", "--dates", "20200901", "20201101",
                // "--sports", "nfl",
            ]
        },
        {
            "name": "df-hist modeling",
            "type": "debugpy",
            "request": "launch",
            "module": "lib.modeling.cli",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/df-hist",
            "args": [
                "--auto", "dummy",
                "--mode", "reuse", 
                "lol", "nfl", "mlb", "nhl", "nba"
            ]
        },
    ]
}